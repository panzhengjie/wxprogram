/* pages/user/user.wxss */
.user_base_info{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 30rpx;
  margin: 80rpx 0rpx;
}
.user_avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin-right: 60rpx;
}
.user_avatar image{
  width: 100%;
  height: 100%;
}
.user_info{
  color: #000;
  line-height: 48rpx;
}
.user_addr_manage{
  width: 100%
}
.user_addr_title{
  padding: 10rpx 60rpx;
  display: block;
  text-align: center;
  font-size: 36rpx;
  margin-bottom: 40rpx;
}
.user_addr_item{
  width: 100%;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 40rpx;
  line-height: 48rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.user_addr_item text{
  width: 580rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  vertical-align: middle;
  text-overflow: ellipsis;
}
navigator{
  text-align: center;
  margin: 0rpx 0 20rpx;
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
  font-size: 32rpx;
  color: #d24a58;
}

