/* pages/home/home.wxss */
.contain{
  width: 100%;
}
.img{
  width: 100%;
  height: 150px;
}
.nav{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  width:100%;
  box-sizing:border-box;
  padding:20rpx 10rpx;
  color:#fff;
}
.navL{
  text-align:center;
  font-size:28rpx;
  width:100rpx;
  border-radius:8rpx;
  box-sizing:border-box;

}
.navImg{
  width:83rpx;
  height:93rpx;
  display:inline-block;
}
.active_red {
  color:#e5004f;
}
.itemShow{
  width:100%;
}
.itemList{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:30rpx;
  border-bottom:2rpx solid #ddd;
  position:relative;
}
.listImg{
  width:170rpx;
  height:158rpx;
}
.listImg image{
  width: 100%;
  height: 100%;
}
.listTitle{
  width:400rpx;
  font-size:26rpx;
  color:#a9a9a9;
}
.listTitle text{
  display: block;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.subject{
  font-size:30rpx;
  line-height:60rpx;
  color:#000;
  margin-bottom:10rpx;
}
.price{
  font-size:32rpx;
  color:#d24a58;
}
.preText{
  background: red;
  border-radius: 50%;
  width:80rpx;
  height:80rpx;
  font-size:26rpx;
  line-height:80rpx;
  color:#fff;
  text-align:center;
  margin-top:35rpx;
}